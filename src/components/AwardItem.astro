---
const { title, prize, color } = Astro.props;
---

<div class="flex flex-col justify-center">
  <h5
    class:list={[
      'text-3xl md:text-4xl lg:text-6xl my-4 text-center drop-shadow-whiteStrokeShadow',
      {
        'text-yellow-400': color === 'gold',
        'text-slate-500': color === 'silver',
        'text-amber-600': color === 'bronze'
      }
    ]}
  >
    {title}
  </h5>
  <div
    class:list={[
      'flex flex-col justify-center items-center relative hover:scale-110 duration-150 ease-in-out',
      {
        'hover:drop-shadow-gold': color === 'gold',
        'hover:drop-shadow-silver': color === 'silver',
        'hover:drop-shadow-bronze': color === 'bronze'
      }
    ]}
  >
    <img class="max-h-72 md:max-h-96 w-full" src="/prize-base.png" alt="PrÃ©mio de primeiro lugar" />
    <div class="w-full flex items-center justify-center absolute bottom-1/4">
      <p class="text-center text-3xl mr-2 lg:mr-4 lg:text-5xl drop-shadow-primaryStrokeShadow">
        {prize}
      </p>
      <img
        class="w-11 h-11 md:w-12 md:h-12 lg:w-16 lg:h-16 drop-shadow-none"
        src="/space.png"
        alt="Space Invaders"
      />
    </div>
  </div>
</div>
