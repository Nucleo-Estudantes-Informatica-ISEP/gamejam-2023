---
import Counter from './Counter';

const targetDate = new Date('2023-06-02T18:00:00+01:00');
---

<div class="flex flex-col items-center justify-center relative select-none">
  <div class="flex items-center justify-center w-full gap-2 lg:gap-8 my-6">
    <img
      class="h-10 w-10 md:h-24 md:w-24 lg:h-32 lg:w-32"
      src="/space-invaders.gif"
      alt="Space invaders animation"
    />
    <div class="flex flex-row items-center justify-center font-retro text-white truncate">
      <h1 class="text-4xl md:text-6xl lg:text-9xl tracking-tighter uppercase mr-2 md:mr-4">
        Coming soon
      </h1>
      <span class="animate-bounce-slow text-center text-2xl md:text-4xl lg:text-8xl mt-3"> .</span>
      <span class="animate-bounce-delayed-1 text-center text-2xl md:text-4xl lg:text-8xl mt-3">
        .</span
      >
      <span class="animate-bounce-delayed-2 text-center text-2xl md:text-4xl lg:text-8xl mt-3">
        .</span
      >
    </div>
  </div>
  <div class="w-full">
    <Counter client:only targetDate={targetDate} />
  </div>
</div>
